timeout: 10800s
steps:
{% for test in tests -%}
{% set test_id = test.nw_product+test.nw_version + "-" + test.hana_product_id + "-" + test.family -%}
- id: "{{ test_id }} - setup files"
  waitFor: ["-"]
  name: "us-docker.pkg.dev/sap-iac-cicd/$_DOCKER_IMAGE_DEVELOPER_TOOLS:$_DOCKER_TAG_VERSION_DEVELOPER_TOOLS"
  args:
    - cp
    - "-r"
    - "."
    - "/nw-ha-{{ loop.index }}"
  volumes:
    - name: 'nw-ha-{{ loop.index }}'
      path: '/nw-ha-{{ loop.index }}'
- id: "{{ test_id }} - deploy"
  waitFor: ['{{ test_id }} - setup files']
  name: "us-docker.pkg.dev/sap-iac-cicd/$_DOCKER_IMAGE_DEVELOPER_TOOLS:$_DOCKER_TAG_VERSION_DEVELOPER_TOOLS"
  env:
    - 'SAP_PROJECT_ID=$_PROJECT_{{test.nw_product|upper}}{{test.nw_version|upper}}_{{test.hana_product_id|upper}}'
    - 'SAP_STATE=present'
    - 'SAP_HANA_PRODUCT_ID={{ test.hana_product_id }}'
    - 'SAP_NW_PRODUCT={{ test.nw_product }}'
    - 'SAP_NW_VERSION={{ test.nw_version }}'
    - 'SAP_IMAGE_PROJECT={{ test.project }}'
    - 'SAP_IMAGE_FAMILY={{ test.family }}'
    - 'SAP_TEST_ID={{ test_id }}'
    - 'SAP_REGION={{ test.region }}'
    - 'SAP_PRIMARY_ZONE={{ test.primary_zone }}'
    - 'SAP_SECONDARY_ZONE={{ test.secondary_zone }}'
    - 'SAP_COUNTER={{loop.index}}'
  args:
    - ./int-test.sh
    - stacks/NetWeaver-HA/playbook.yml
    - stacks/NetWeaver-HA/vars/deploy-vars-cloud-build.yml
    - "2"
  dir: '/nw-ha-{{ loop.index }}/'
  volumes:
    - name: 'nw-ha-{{ loop.index }}'
      path: '/nw-ha-{{ loop.index }}'
{% endfor %}
substitutions:
  _DOCKER_IMAGE_DEVELOPER_TOOLS: 'cicd/developer-tools'
  _DOCKER_TAG_VERSION_DEVELOPER_TOOLS: '0.3'
options:
  env:
    - 'TOTAL_TESTS={{ tests|length }}'
  machineType: 'N1_HIGHCPU_32'

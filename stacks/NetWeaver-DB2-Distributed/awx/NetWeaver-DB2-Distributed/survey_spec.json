{
  "description": "",
  "name": "parameters",
  "spec": [
    {
      "question_name": "Terraform state bucket",
      "question_description": "This is the bucket where Terraform state is stored. If it does not exist yet, it will be created.",
      "required": true,
      "type": "text",
      "variable": "sap_tf_state_bucket",
      "min": 1,
      "max": 1024
    },
    {
      "question_name": "Terraform state bucket prefix",
      "question_description": "This the state file prefix in the Terraform state bucket. Choose a unique name to avoid clashes with other state files.",
      "required": true,
      "type": "text",
      "variable": "sap_tf_state_bucket_prefix",
      "min": 1,
      "max": 1024
    },
    {
      "question_name": "Project ID",
      "question_description": "This is the ID of the project in which cloud resources are created.",
      "required": true,
      "type": "text",
      "variable": "sap_project_id",
      "min": 1,
      "max": 1024
    },
    {
      "question_name": "Subnetwork",
      "question_description": "This is the subnetwork for the machine instance network interfaces.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_subnetwork",
      "min": 1,
      "max": 1024
    },
    {
      "question_name": "Subnetwork project",
      "question_description": "This is the project of the subnetwork for the machine instance network interfaces. If left blank, it will default to the Project ID.",
      "required": false,
      "type": "text",
      "variable": "sap_subnetwork_project_id",
      "min": 0,
      "max": 1024,
      "default": ""
    },
    {
      "question_name": "Network tag",
      "question_description": "This is the network tag that will be assigned to instances.",
      "required": false,
      "type": "text",
      "variable": "sap_network_tag",
      "min": 1,
      "max": 1024,
      "default": "sap-allow-all"
    },
    {
      "question_name": "Zone",
      "question_description": "This is the zone of the region in which cloud resources will be created.",
      "required": true,
      "type": "multiplechoice",
      "variable": "sap_zone",
      "min": 1,
      "max": 30,
      "default": "us-central1-a",
      "choices": ["us-east1-b", "us-east1-c", "us-east1-d", "us-east4-c", "us-east4-b", "us-east4-a", "us-central1-c", "us-central1-a", "us-central1-f", "us-central1-b", "us-west1-b", "us-west1-c", "us-west1-a", "europe-west4-a", "europe-west4-b", "europe-west4-c", "europe-west1-b", "europe-west1-d", "europe-west1-c", "europe-west3-c", "europe-west3-a", "europe-west3-b", "europe-west2-c", "europe-west2-b", "europe-west2-a", "asia-east1-b", "asia-east1-a", "asia-east1-c", "asia-southeast1-b", "asia-southeast1-a", "asia-southeast1-c", "asia-northeast1-b", "asia-northeast1-c", "asia-northeast1-a", "asia-south1-c", "asia-south1-b", "asia-south1-a", "australia-southeast1-b", "australia-southeast1-c", "australia-southeast1-a", "southamerica-east1-b", "southamerica-east1-c", "southamerica-east1-a", "asia-east2-a", "asia-east2-b", "asia-east2-c", "asia-northeast2-a", "asia-northeast2-b", "asia-northeast2-c", "asia-northeast3-a", "asia-northeast3-b", "asia-northeast3-c", "asia-southeast2-a", "asia-southeast2-b", "asia-southeast2-c", "europe-north1-a", "europe-north1-b", "europe-north1-c", "europe-west6-a", "europe-west6-b", "europe-west6-c", "northamerica-northeast1-a", "northamerica-northeast1-b", "northamerica-northeast1-c", "us-west2-a", "us-west2-b", "us-west2-c", "us-west3-a", "us-west3-b", "us-west3-c", "us-west4-a", "us-west4-b", "us-west4-c"]
    },
    {
      "question_name": "DB2 instance name",
      "question_description": "This is the name of the DB2 instance.",
      "required": true,
      "type": "text",
      "variable": "sap_db2_instance_name",
      "min": 1,
      "max": 63
    },
    {
      "question_name": "ASCS instance name",
      "question_description": "This is the name of the ASCS instance.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_ascs_instance_name",
      "min": 1,
      "max": 13
    },
    {
      "question_name": "Application server instance base name",
      "question_description": "This is the base name of the application server instances. Names will be derived from this with a numeric suffix.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_as_instance_basename",
      "min": 1,
      "max": 10
    },
    {
      "question_name": "Number of application server instances",
      "question_description": "This is the number of application server instances. The first instance is the PAS and additional instances are AAS",
      "required": false,
      "type": "integer",
      "variable": "sap_nw_as_num_instances",
      "default": 1
    },
    {
      "question_name": "Image family",
      "question_description": "Family of the image used to create machines (rhel-7-4-sap, rhel-7-6-sap-ha, rhel-7-7-sap-ha, sles-12-sp3-sap, sles-12-sp4-sap, sles-12-sp5-sap, sles-15-sap, sles-15-sp1-sap, sles-15-sp2-sap, sles-15-sp3-sap).",
      "required": true,
      "type": "text",
      "variable": "sap_source_image_family",
      "default": "rhel-7-7-sap-ha"
    },
    {
      "question_name": "Image project",
      "question_description": "Project of the image used to create machines. Choose rhel-sap-cloud for 'rhel' images and suse-sap-cloud for 'sles' images.",
      "required": true,
      "type": "multiplechoice",
      "variable": "sap_source_image_project",
      "default": "rhel-sap-cloud",
      "choices": ["rhel-sap-cloud", "suse-sap-cloud"]
    },
    {
      "question_name": "DB2 instance type",
      "question_description": "Machine instance type for DB2.",
      "required": true,
      "type": "text",
      "variable": "sap_db2_instance_type",
      "min": 1,
      "max": 1024,
      "default": "e2-standard-8"
    },
    {
      "question_name": "NetWeaver instance type",
      "question_description": "Machine instance type for NetWeaver.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_instance_type",
      "min": 1,
      "max": 1024,
      "default": "e2-standard-8"
    },
    {
      "question_name": "Service account name",
      "question_description": "This is the name of an existing service account for the machine instances. This should be the name before the '@' symbol, not the entire email address.",
      "required": false,
      "type": "text",
      "variable": "sap_nw_service_account_name",
      "min": 0,
      "max": 1024,
      "default": "sap-common-sa"
    },
    {
      "question_name": "Installation files bucket",
      "question_description": "This is the bucket from which installation files will be downloaded. You can add folders to the bucket name to define the path in the bucket where the files are located, for example 'xyz-install-files/nw/750'.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_install_files_bucket",
      "min": 1,
      "max": 1024,
      "default": "sap-deployment-media"
    },
    {
      "question_name": "DB2 version",
      "question_description": "This is the version of DB2 to install. IMPORTANT: the DB2 version determines the OS version that can be used. Please consult https://www.ibm.com/support/pages/system-requirements-ibm-db2-linux-unix-and-windows for the compatibility matrix.",
      "required": true,
      "type": "multiplechoice",
      "variable": "sap_db2_product_version",
      "default": "11.5MP5FP1",
      "choices": ["10.5FP9", "11.1MP4FP6", "11.5MP5FP1"]
    },
    {
      "question_name": "NetWeaver version",
      "question_description": "This is the version of NetWeaver to install.",
      "required": true,
      "type": "multiplechoice",
      "variable": "sap_nw_product_version",
      "default": "750",
      "choices": ["750"]
    },
    {
      "question_name": "NetWeaver SID",
      "question_description": "This is the system identifier for NetWeaver. It must be three characters starting with a letter.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_sid",
      "min": 3,
      "max": 3,
      "default": "XYZ"
    },
    {
      "question_name": "ASCS instance number",
      "question_description": "This is the instance number for ASCS. It must be a two digit number between 00 and 99.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_ascs_instance_number",
      "min": 2,
      "max": 2,
      "default": "00"
    },
    {
      "question_name": "Application server instance number",
      "question_description": "This is the instance number for PAS and AAS. It must be a two digit number between 00 and 99.",
      "required": true,
      "type": "text",
      "variable": "sap_nw_pas_instance_number",
      "min": 2,
      "max": 2,
      "default": "00"
    },
    {
      "question_name": "Master password",
      "question_description": "This is the master password for NetWeaver and DB2.",
      "required": true,
      "type": "password",
      "variable": "sap_nw_password",
      "min": 8,
      "max": 100
    }
  ]
}
